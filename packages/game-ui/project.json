{
  "name": "@dungeon-adventure/game-ui",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/game-ui/src",
  "projectType": "application",
  "tags": [],
  "metadata": {
    "generator": "ts#react-website"
  },
  "targets": {
    "build": {
      "dependsOn": ["lint", "compile", "bundle", "test"],
      "options": {
        "outputPath": "dist/packages/game-ui/bundle"
      }
    },
    "bundle": {
      "executor": "@nx/vite:build",
      "outputs": ["{options.outputPath}"],
      "defaultConfiguration": "production",
      "options": {
        "outputPath": "dist/packages/game-ui/bundle"
      },
      "configurations": {
        "development": {
          "mode": "development"
        },
        "production": {
          "mode": "production"
        }
      }
    },
    "compile": {
      "executor": "nx:run-commands",
      "outputs": ["{workspaceRoot}/dist/{projectRoot}/tsc"],
      "options": {
        "command": "tsc --build tsconfig.app.json",
        "cwd": "{projectRoot}"
      }
    },
    "load:runtime-config": {
      "executor": "nx:run-commands",
      "metadata": {
        "description": "Load runtime config from your deployed stack for dev purposes. You must set your AWS CLI credentials whilst calling 'pnpm exec nx run @dungeon-adventure/game-ui:load:runtime-config'"
      },
      "options": {
        "command": "aws s3 cp s3://`aws cloudformation describe-stacks --query \"Stacks[?starts_with(StackName, 'dungeon-adventure-')][].Outputs[] | [?contains(OutputKey, 'GameUIWebsiteBucketName')].OutputValue\" --output text`/runtime-config.json './packages/game-ui/public/runtime-config.json'"
      }
    },
    "preview": {
      "dependsOn": ["build"],
      "executor": "@nx/vite:preview-server",
      "defaultConfiguration": "development",
      "options": {
        "buildTarget": "@dungeon-adventure/game-ui:build"
      },
      "configurations": {
        "development": {
          "buildTarget": "@dungeon-adventure/game-ui:build:development"
        },
        "production": {
          "buildTarget": "@dungeon-adventure/game-ui:build:production"
        }
      }
    },
    "serve": {
      "executor": "@nx/vite:dev-server",
      "defaultConfiguration": "development",
      "options": {
        "buildTarget": "@dungeon-adventure/game-ui:build"
      },
      "configurations": {
        "development": {
          "buildTarget": "@dungeon-adventure/game-ui:build:development",
          "hmr": true
        },
        "production": {
          "buildTarget": "@dungeon-adventure/game-ui:build:production",
          "hmr": false
        }
      }
    },
    "serve-local": {
      "executor": "@nx/vite:dev-server",
      "options": {
        "buildTarget": "@dungeon-adventure/game-ui:build:development",
        "hmr": true,
        "mode": "serve-local"
      },
      "continuous": true,
      "dependsOn": [
        {
          "projects": ["@dungeon-adventure/game-api"],
          "target": "serve"
        }
      ]
    },
    "serve-static": {
      "executor": "@nx/web:file-server",
      "dependsOn": ["build"],
      "options": {
        "buildTarget": "@dungeon-adventure/game-ui:build",
        "spa": true
      }
    },
    "test": {
      "executor": "@nx/vite:test",
      "outputs": ["{options.reportsDirectory}"],
      "options": {
        "reportsDirectory": "../../coverage/packages/game-ui"
      }
    }
  }
}
