{
  "name": "@dungeon-adventure/game-api",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/game-api/src",
  "projectType": "library",
  "tags": [],
  "metadata": {
    "generator": "ts#trpc-api",
    "ports": [2022],
    "apiName": "GameApi",
    "apiType": "trpc",
    "auth": "IAM"
  },
  "targets": {
    "build": {
      "dependsOn": ["lint", "compile", "test", "bundle"]
    },
    "bundle": {
      "cache": true,
      "outputs": ["{workspaceRoot}/dist/{projectRoot}/bundle"],
      "executor": "nx:run-commands",
      "options": {
        "command": "rolldown -c rolldown.config.ts",
        "cwd": "{projectRoot}"
      },
      "dependsOn": ["compile"]
    },
    "compile": {
      "executor": "nx:run-commands",
      "outputs": ["{workspaceRoot}/dist/packages/game-api/tsc"],
      "options": {
        "command": "tsc --build tsconfig.lib.json",
        "cwd": "{projectRoot}"
      }
    },
    "serve": {
      "executor": "nx:run-commands",
      "options": {
        "commands": ["tsx --watch src/local-server.ts"],
        "cwd": "packages/game-api"
      },
      "continuous": true
    },
    "test": {
      "executor": "@nx/vite:test",
      "outputs": ["{options.reportsDirectory}"],
      "options": {
        "reportsDirectory": "../../coverage/packages/game-api"
      }
    }
  }
}
