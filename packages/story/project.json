{
  "name": "dungeon_adventure.story",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "projectType": "application",
  "sourceRoot": "packages/story/dungeon_adventure_story",
  "release": {
    "version": {
      "versionActions": "@nxlv/python/src/release/version-actions"
    }
  },
  "tags": [],
  "metadata": {
    "generator": "py#project"
  },
  "targets": {
    "add": {
      "executor": "@nxlv/python:add",
      "options": {}
    },
    "build": {
      "dependsOn": ["lint", "compile", "test", "bundle", "docker"],
      "options": {
        "outputPath": "{workspaceRoot}/dist/packages/story"
      }
    },
    "compile": {
      "executor": "@nxlv/python:build",
      "outputs": ["{workspaceRoot}/dist/packages/story/build"],
      "options": {
        "outputPath": "{workspaceRoot}/dist/packages/story/build",
        "publish": false,
        "lockedVersions": true,
        "bundleLocalDependencies": true
      },
      "cache": true
    },
    "format": {
      "executor": "@nxlv/python:ruff-format",
      "outputs": [],
      "options": {
        "filePatterns": ["dungeon_adventure_story", "tests"]
      },
      "cache": true
    },
    "install": {
      "executor": "@nxlv/python:install",
      "options": {
        "silent": false,
        "args": "",
        "verbose": false,
        "debug": false
      }
    },
    "lint": {
      "executor": "@nxlv/python:ruff-check",
      "outputs": [],
      "options": {
        "lintFilePatterns": ["dungeon_adventure_story", "tests"]
      },
      "cache": true,
      "dependsOn": ["format"]
    },
    "lock": {
      "executor": "@nxlv/python:lock",
      "options": {
        "update": false
      }
    },
    "remove": {
      "executor": "@nxlv/python:remove",
      "options": {}
    },
    "sync": {
      "executor": "@nxlv/python:sync",
      "options": {}
    },
    "test": {
      "executor": "@nxlv/python:run-commands",
      "outputs": [
        "{workspaceRoot}/reports/{projectRoot}/unittests",
        "{workspaceRoot}/coverage/{projectRoot}"
      ],
      "options": {
        "command": "uv run pytest tests/",
        "cwd": "{projectRoot}"
      },
      "cache": true
    },
    "update": {
      "executor": "@nxlv/python:update",
      "options": {}
    },
    "bundle-arm": {
      "cache": true,
      "executor": "nx:run-commands",
      "outputs": ["{workspaceRoot}/dist/packages/story/bundle-arm"],
      "options": {
        "commands": [
          "uv export --frozen --no-dev --no-editable --project packages/story --package dungeon_adventure.story -o dist/packages/story/bundle-arm/requirements.txt",
          "uv pip install -n --no-deps --no-installer-metadata --no-compile-bytecode --python-platform aarch64-manylinux2014 --target dist/packages/story/bundle-arm -r dist/packages/story/bundle-arm/requirements.txt"
        ],
        "parallel": false
      },
      "dependsOn": ["compile"]
    },
    "bundle": {
      "dependsOn": ["bundle-arm"]
    },
    "story-agent-docker": {
      "cache": true,
      "executor": "nx:run-commands",
      "options": {
        "commands": [
          "docker build --platform linux/arm64 -t dungeon-adventure-story-agent:latest packages/story/dungeon_adventure_story/agent --build-context workspace=."
        ],
        "parallel": false
      },
      "dependsOn": ["bundle-arm"]
    },
    "docker": {
      "dependsOn": ["story-agent-docker"]
    },
    "agent-serve": {
      "executor": "nx:run-commands",
      "options": {
        "commands": ["uv run python -m dungeon_adventure_story.agent.main"],
        "cwd": "{projectRoot}"
      },
      "continuous": true
    }
  }
}
